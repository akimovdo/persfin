<button 
	type="button"
	onclick="openMonthlyPaymentsModal()" 
	class="btn btn-sm btn-primary mb-6">
	<i class="fas fa-calendar-alt"></i>
	Ежемесячные начисления
</button>

<!-- Модальное окно с ежемесячными начислениями -->
<dialog id="monthlyPaymentsModal" class="modal">
	<div class="modal-box max-w-7xl w-full">
		<form method="dialog">
			<button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
		</form>
		
		<div class="modal-content">
			<%- include('_monthly_payments') %>
		</div>
	</div>
	<form method="dialog" class="modal-backdrop">
		<button>Закрыть</button>
	</form>
</dialog>

<script>
function openMonthlyPaymentsModal() {
	const modal = document.getElementById('monthlyPaymentsModal');
	if (modal) {
		modal.showModal();
	}
}
</script>
